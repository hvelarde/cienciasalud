<div id="news-media-wrapper">
    <div id="newsmedia-nav">
        <div tal:define="viewlet_id viewlet/__name__;
                         here_url context/@@plone_context_state/object_url;"
             tal:attributes="id viewlet_id">
            <tal:media condition="viewlet/newsmedia/hasContainer" define="media context/media">
            <div id="media-contents" class="newsMediaContainer" tal:repeat="medium media/keys">
                <a href="#"
                    tal:attributes="href string:$here_url/media/$medium/large">
                    <img src="img" tal:attributes="src string:$here_url/media/$medium/thumb; alt python: media[medium].title" />
                </a>
                <p class="discreet" tal:condition="python: media[medium].title" tal:content="python: media[medium].title" />
            </div>
            </tal:media>
            <div class="visualClear"></div>
            <!--tal:content="string:VIEWLET: ${viewlet_id}"-->
        </div>
    </div>
</div>
            <div class="visualClear"></div>
